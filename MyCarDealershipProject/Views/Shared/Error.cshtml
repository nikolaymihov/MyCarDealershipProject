@model MyCarDealershipProject.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

@if (Model.ShowRequestId)
{
    <p class="my-3">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="text-center text-danger my-5">
    @if (Model.StatusCode == "404")
    {
        <h1>Error @Model.StatusCode</h1>
        <h2>We are sorry, but the page you requested cannot be found.</h2>
    }
    else
    {
        <h1>Ooops, Error.</h1>
        <h2>Unfortunately, an error occurred while processing your request.</h2>
    }
</div>
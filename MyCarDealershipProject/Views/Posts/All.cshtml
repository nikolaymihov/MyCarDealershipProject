@using System.Globalization
@model MyCarDealershipProject.Models.Posts.PostsListViewModel

@{
    this.ViewData["Title"] = "All car posts";
}


<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach (var post in Model.Posts)
    {
        <div class="card m-3" style="width: 18rem;">
            <div class="mb-1 align-self-end">@post.PublishedOn</div>
            <h6 class="card-price mt-3">€@post.Car.Price.ToString("N", CultureInfo.InvariantCulture).Replace(".00", String.Empty)</h6>
            <img src="@post.Car.CoverImage" class="card-img-top" alt="@post.Car.Make @post.Car.Model @post.Car.Year">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@post.Car.Make @post.Car.Model @post.Car.Year</h5>
                <hr class="mt-0" />
                <h6 class="card-title mb-3">@post.Car.Year, @post.Car.FuelType, @post.Car.Kilometers km, @post.Car.TransmissionType</h6>
                <p class="card-text"><i>@post.Car.Description</i></p>
                <div class="row mt-auto">
                    <div class="col"><p class="card-text">@post.Car.LocationCity, @post.Car.LocationCountry</p></div>
                    <div class="col align-self-end"><a href="#" class="btn btn-primary">View more</a></div>
                </div>
            </div>
        </div>
    }
</div>
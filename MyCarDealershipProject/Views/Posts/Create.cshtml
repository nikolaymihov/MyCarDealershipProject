@using System.Collections.Specialized
@model MyCarDealershipProject.Models.Posts.CreatePostInputModel

@{
    this.ViewData["Title"] = "Create post";
    var extraTypes = new Dictionary<int, string>();
}

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
    <h2 class="heading-margin text-center">@this.ViewData["Title"]</h2>
    <div class="row mb-3">
        <div class="col-md-6 mb-3">
            <label asp-for="Car.Make" class="form-label"></label>
            <input asp-for="Car.Make" class="form-control" placeholder="Mercedes, BMW, Honda, etc...">
            <span asp-validation-for="Car.Make" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="Car.Model" class="form-label"></label>
            <input asp-for="Car.Model" class="form-control" placeholder="S-Class, 640D, Accord, etc...">
            <span asp-validation-for="Car.Model" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="Car.Description" class="form-label"></label>
        <textarea asp-for="Car.Description" class="form-control" rows="6" placeholder="This is the perfect car..."></textarea>
        <span asp-validation-for="Car.Description" class="text-danger"></span>
    </div>
    <div class="row mb-3">
        <div class="col-md-4 mb-3 mt-3">
            <label asp-for="@Model.Car.CategoryId" class="form-label"></label>
            <select asp-for="@Model.Car.CategoryId" class="form-select">
                <option disabled selected>Choose category</option>
                @foreach (var category in Model.Car.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.Car.CategoryId" class="small text-danger"></span>
        </div>
        <div class="col-md-4 mb-3 mt-3">
            <label asp-for="@Model.Car.FuelTypeId" class="form-label"></label>
            <select asp-for="@Model.Car.FuelTypeId" class="form-select">
                <option disabled selected>Choose fuel type</option>
                @foreach (var fuelType in Model.Car.FuelTypes)
                {
                    <option value="@fuelType.Id">@fuelType.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.Car.FuelTypeId" class="small text-danger"></span>
        </div>
        <div class="col-md-4 mb-3 mt-3">
            <label asp-for="@Model.Car.TransmissionTypeId" class="form-label"></label>
            <select asp-for="@Model.Car.TransmissionTypeId" class="form-select">
                <option disabled selected>Choose transmission type</option>
                @foreach (var transmissionType in Model.Car.TransmissionTypes)
                {
                    <option value="@transmissionType.Id">@transmissionType.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.Car.TransmissionTypeId" class="small text-danger"></span>
        </div>
    </div>
    <hr />
    <h4 class="mb-1 text-center">Car extras:</h4>
    <div class="row">
        <div class="col">
            @foreach (var carExtra in Model.Car.CarExtras)
            {
                @if (!extraTypes.ContainsKey(carExtra.TypeId))
                {
                    extraTypes[carExtra.TypeId] = carExtra.TypeName;
                    <div class="mb-2 mt-3"><h6>@carExtra.TypeName</h6></div>
                }

                <div class="form-check-inline mb-2">
                    <input 
                        id="extra_@carExtra.Id" 
                        class="form-check-input" 
                        type="checkbox" 
                        name="SelectedExtrasIds" 
                        value="@carExtra.Id"
                        @(Model.SelectedExtrasIds.Contains(carExtra.Id) ? "checked" : "")>
                    <label class="form-check-label" for="extra_@carExtra.Id">@carExtra.Name</label>
                </div>
            }
        </div>
    </div>
    <hr />
    <div class="row mb-3">
        <div class="col-md-4 mb-3 mt-3">
            <label asp-for="Car.Year" class="form-label"></label>
            <input asp-for="Car.Year" class="form-control">
            <span asp-validation-for="Car.Year" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3 mt-3">
            <label asp-for="Car.Kilometers" class="form-label"></label>
            <input asp-for="Car.Kilometers" class="form-control">
            <span asp-validation-for="Car.Kilometers" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3 mt-3">
            <label asp-for="Car.Horsepower" class="form-label"></label>
            <input asp-for="Car.Horsepower" class="form-control">
            <span asp-validation-for="Car.Horsepower" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4 mb-3">
            <label asp-for="Car.Price" class="form-label"></label>
            <input asp-for="Car.Price" class="form-control">
            <span asp-validation-for="Car.Price" class="text-danger"></span>
        </div>
        <div class="col-md-8 mb-3">
            <label asp-for="Car.Images" class="form-label"></label>
            <input asp-for="Car.Images" class="form-control" />
            <span asp-validation-for="Car.Images" class="text-danger"></span>
            <span class="text-danger">@Html.ValidationMessage("CustomError")</span>
        </div>
    </div>
    <hr />
    <div align="center"><input type="submit" class="btn btn-primary col-4" value="Save" /></div>
</form>
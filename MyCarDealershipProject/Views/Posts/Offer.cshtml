@using System.Globalization
@model MyCarDealershipProject.Models.Posts.SinglePostViewModel

@{
    this.ViewData["Title"] = $"{Model.Car.Make} {Model.Car.Model}";
}


<h1 class="mb-3 text-center">Post details:</h1>
<div class="row mb-3">
    <div class="col-2 mb-1">Published on: @Model.PublishedOn</div>
    <div class="col-2 offset-8 align-self-end">
        <h4 class="text-center" style="border:black; border-width:3px; border-style:solid; color:green">€@Model.Car.Price.ToString("N", CultureInfo.InvariantCulture).Replace(".00", String.Empty)</h4>
    </div>
</div>

<div class="row"><h4>@Model.Car.Make @Model.Car.Model, Year: @Model.Car.Year, @Model.Car.Category, @Model.Car.FuelType, @(Model.Car.Kilometers)km, @Model.Car.TransmissionType, @(Model.Car.Horsepower)Hp</h4></div>
<hr class="mb-3"/>
<div class="row">
    <div class="col-4">
        <h4 class="text-center">Description</h4>
        @Model.Car.Description
        <hr />
        <h4 class="mb-3 text-center">Car extras</h4>
        <h5 class="mt-3"><i><strong>Comfort:</strong> </i></h5>
        @foreach (var extra in Model.Car.ComfortExtras)
        {
            <text>@extra, </text>
        }

        <h5 class="mt-3"><i><strong>Safety:</strong> </i></h5>
        @foreach (var extra in Model.Car.SafetyExtras)
        {
            <text>@extra, </text>
        }

        <h5 class="mt-3"><i><strong>Other:</strong> </i></h5>
        @foreach (var extra in Model.Car.OtherExtras)
        {
            <text>@extra, </text>
        }
    </div>

    <div class="col-8 m-auto">
        <div class="owl-carousel owl-theme">
            @foreach (var image in Model.Car.Images)
            {
                <img src="@image" style="width: 760px" alt="@Model.Car.Make @Model.Car.Model @Model.Car.Year">
            }
        </div>
    </div>
</div>

<h5 class="mt-3">Seller information:</h5>
<div class="row">
    <div>
        <div class="col-4 fas fa-user-check"> <strong>@Model.SellerName</strong></div>
        <div class="col-4 fas fa-phone-alt"><strong> @Model.SellerPhoneNumber</strong></div>
        <div class="col-4 fas fa-map-marker-alt"><strong> @Model.Car.LocationCity, @Model.Car.LocationCountry</strong></div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/owl.carousel.min.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $(".owl-carousel").owlCarousel({
                loop: true,
                margin: 10,
                nav: true,
                navText: ["<i class='fas fa-chevron-left'></i>", "<i class='fas fa-chevron-right'></i>"],
                responsive: {
                    0: {
                        items: 1
                    }
                }
            });
        });

    </script>
}
